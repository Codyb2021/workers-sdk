{
	"$schema": "http://turbo.build/schema.json",
	"pipeline": {
		"dev": {
			"persistent": true,
			"cache": false
		},
		"build": { "dependsOn": ["^build"] },
		"test": {
			"dependsOn": ["^build"],
			"inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
		},
		"test:watch": {
			"cache": false
		},
		"check:lint": {},
		"check:type": {},
		"test:ci": {},
		"check:format": {}
	}
}
