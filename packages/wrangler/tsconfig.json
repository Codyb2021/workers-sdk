{
	"extends": "@cloudflare/workers-tsconfig/tsconfig.json",
	"compilerOptions": {
		"module": "CommonJS",
		"types": ["node"],
		"jsx": "react"
	},
	"include": ["./**/*.d.ts", "./**/*.ts", "./**/*.tsx", "./**/*.js"],
	"exclude": [
		"emitted-types",
		"node_modules",
		"*-dist",
		"src/miniflare-cli",
		"templates",
		"src/__tests__/**",
		"src/__tests__/e2e/**",
		"src/pages/functions"
	]
}
